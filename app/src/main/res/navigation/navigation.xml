<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/viewNotesFragment">

    <!-- ðŸŸ© View Notes Fragment -->
    <fragment
        android:id="@+id/viewNotesFragment"
        android:name="com.example.notetakingapp.fragments.ViewNotesFragment"
        android:label="View Notes"
        tools:layout="@layout/fragment_view_notes">

        <!-- Navigate to Add Note -->
        <action
            android:id="@+id/action_viewNotes_to_addNote"
            app:destination="@id/addNoteFragment" />

        <!-- Navigate to Update Note -->
        <action
            android:id="@+id/action_viewNotes_to_updateNote"
            app:destination="@id/updateNoteFragment" />
    </fragment>

    <!-- ðŸŸ¦ Add Note Fragment -->
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.notetakingapp.fragments.AddNoteFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_add_note">
        <action
            android:id="@+id/action_addNote_to_viewNotes"
            app:destination="@id/viewNotesFragment" />
    </fragment>

    <!-- ðŸŸ¨ Update Note Fragment -->
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="com.example.notetakingapp.fragments.UpdateNoteFragment"
        android:label="Update Note"
        tools:layout="@layout/fragment_update_note">
        <action
            android:id="@+id/action_updateNote_to_viewNotes"
            app:destination="@id/viewNotesFragment" />
    </fragment>

</navigation>
